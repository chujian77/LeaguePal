{
  "name": "league-pal",
  "productName": "LeaguePal",
  "version": "1.2.0",
  "description": "LeaguePal - 你的英雄联盟客户端助手",
  "main": ".vite/build/main.js",
  "private": true,
  "scripts": {
    "dev:vue": "vite -c vite.renderer.config.ts",
    "dev:main": "vite build -c vite.main.config.ts --watch",
    "dev:preload": "vite build -c vite.preload.config.ts --watch",
    "dev:electron": "wait-on tcp:5173 && nodemon --watch package.json --exec electron .",
    "dev": "concurrently -k -i -n \"vue,main,preload,electron\" -c \"cyan,blue,magenta,yellow\" \"vite -c vite.renderer.config.ts\" \"vite build -c vite.main.config.ts --watch\" \"vite build -c vite.preload.config.ts --watch\" \"wait-on tcp:5173 && nodemon --watch package.json --exec electron .\"",
    "compile": "vite build -c vite.main.config.ts && vite build -c vite.preload.config.ts && vite build -c vite.renderer.config.ts",
    "build": "npm run compile && electron-builder --win",
    "release": "npm run compile && electron-builder --win --publish always"
  },
  "build": {
    "appId": "com.chujian77.leaguepal",
    "productName": "LeaguePal",
    "directories": {
      "output": "release"
    },
    "files": [
      ".vite/**/*",
      "package.json"
    ],
    "win": {
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "LeaguePal"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "chujian77",
        "repo": "LeaguePal"
      }
    ]
  },
  "keywords": [],
  "author": {
    "name": "deeson",
    "email": "251062521@qq.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@electron-forge/maker-deb": "^7.11.1",
    "@electron-forge/maker-rpm": "^7.11.1",
    "@electron-forge/maker-zip": "^7.11.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.11.1",
    "@electron/fuses": "^1.8.0",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^25.0.10",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "concurrently": "^9.2.1",
    "electron": "^38.7.2",
    "electron-builder": "^26.8.1",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.11",
    "typescript": "~4.5.4",
    "vite": "^5.4.21",
    "wait-on": "^8.0.5"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "vue": "^3.5.27",
    "ws": "^8.19.0"
  }
}